# Requirements: $USER has sudo rights and NetworkManager service is enabled

# Update submodules
yadm submodule update --recursive --init

# Install yay
if ! command_exists yay; then
    echo ">>> Installing yay"
    sudo pacman -S --noconfirm --needed git base-devel && git clone https://aur.archlinux.org/yay-bin.git && cd yay-bin && makepkg -si --noconfirm && cd $HOME && rm -rf yay-bin
fi

# Essentials
sudo pacman -S base-devel git zsh xclip ripgrep fd man-db man-pages --no-confirm
sudo pacman -S kitty neovim emacs-nativecomp --no-confirm

# Graphical interface
sudo pacman -S xorg xorg-xinit bspwm sxhkd nvidia --no-confirm
sudo pacman -S rofi nitrogen picom --no-confirm

# Stuff
yay -S neofetch antigen github-cli --no-confirm

# Graphical Applications
yay -S brave-bin gimp gnucash --no-confirm

# Fonts
yay -S nerd-fonts-jetbrains-mono --no-confirm

chsh --shell /bin/zsh $USER

rm -rf .bash*
