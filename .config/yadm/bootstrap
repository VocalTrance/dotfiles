#!/bin/sh
# Install yay
if ! command_exists yay; then
    echo ">>> Installing yay"
    sudo pacman -S --noconfirm --needed git base-devel && git clone https://aur.archlinux.org/yay-bin.git && cd yay-bin && makepkg -si --noconfirm && cd $HOME && rm -rf yay-bin
fi

# Essentials
sudo pacman -S base-devel git zsh xclip ripgrep fd man-db man-pages --noconfirm
sudo pacman -S kitty neovim emacs-nativecomp --noconfirm

# Graphical interface
sudo pacman -S xorg xorg-xinit bspwm sxhkd nvidia --noconfirm
sudo pacman -S rofi feh picom polybar --noconfirm
# yay -S lxappearance nordic-darker-theme

# Sound
sudo pacman -S pulseaudio alsa-utils pulseaudio-alsa pavucontrol

# Stuff
yay -S neofetch antigen github-cli --noconfirm

# Graphical Applications
yay -S brave-bin gimp gnucash thunar --noconfirm

# Fonts
yay -S nerd-fonts-jetbrains-mono ttf-all-the-icons --noconfirm

chsh --shell /bin/zsh $USER

rm -rf .bash*
